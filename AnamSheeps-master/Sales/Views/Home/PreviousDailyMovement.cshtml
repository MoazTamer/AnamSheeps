@{
    ViewData["Title"] = "التقارير السابقة";
    var selectedDate = ViewBag.SelectedDate as DateTime?;
}

<div class="d-flex align-items-center gap-3 mb-4">
    <form method="get" class="d-flex align-items-center gap-3">
        <label class="form-label fw-bold mb-0">اختر التاريخ:</label>
        <input type="date" name="date" class="form-control form-control-solid"
               value="@selectedDate?.ToString("yyyy-MM-dd")"
               onchange="this.form.submit()" />
    </form>
</div>

@if (ViewBag.HasMovement == false)
{
    <div class="alert alert-warning">
        لا يوجد بيان لهذا التاريخ.
    </div>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">
    الرجوع للرئيسية
</a>
