@using Sales.Helper;
<!--begin::Primary menu-->
<div id="kt_app_aside_menu" class="menu menu-sub-indention menu-rounded menu-column fw-semibold fs-6 px-2" data-kt-menu="true">
	<!--begin:Menu item-->
	<div class="menu-item">
		<!--begin:Menu link-->
		<a href="/Home" class="@Html.IsSelected(actions: "index", controllers: "home")">
			<span class="menu-icon">
				<i class="ki-outline ki-home-2 fs-2"></i>
			</span>
			<span class="menu-title">الرئيسية</span>
		</a>
		<!--end:Menu link-->
	</div>
	<!--end:Menu item-->
	<!--begin:Menu item-->
	<div data-kt-menu-trigger="click" class="@(Html.IsShow(controllers: "product_category,product_unit,product_title") == "product" ? "menu-item here show menu-accordion" : "menu-item menu-accordion")">
		<!--begin:Menu link-->
		<span class="menu-link">
			<span class="menu-icon">
				<i class="ki-duotone ki-handcart"></i>
			</span>
			<span class="menu-title">الأصناف</span>
			<span class="menu-arrow"></span>
		</span>
		<!--end:Menu link-->
		<!--begin:Menu sub-->
		<div class="menu-sub menu-sub-accordion">
			<!--begin:Menu item-->
			<div data-kt-menu-trigger="click" class="menu-item menu-accordion">
				<!--begin:Menu item-->
				<div class="menu-item">
					<!--begin:Menu link-->
					<a class="@Html.IsSelected(actions: "index", controllers: "product_category")" asp-controller="Product_Category" asp-action="Index">
						<span class="menu-bullet">
							<span class="bullet bullet-dot"></span>
						</span>
						<span class="menu-title">الفئات</span>
					</a>
					<a class="@Html.IsSelected(actions: "index", controllers: "product")" asp-controller="Product" asp-action="Index">
						<span class="menu-bullet">
							<span class="bullet bullet-dot"></span>
						</span>
						<span class="menu-title">الأصناف</span>
					</a>
					<!--end:Menu link-->
				</div>
				<!--end:Menu item-->
			</div>
			<!--end:Menu item-->
		</div>
		<!--end:Menu sub-->
	</div>
	<div data-kt-menu-trigger="click" class="@(Html.IsShow(controllers: "customer,supplier") == "customer" ? "menu-item here show menu-accordion" : "menu-item menu-accordion")">
