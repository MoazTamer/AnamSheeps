						<span class="menu-bullet">
							<span class="bullet bullet-dot"></span>
						</span>
						<span class="menu-title">العملاء</span>
					</a>
				</div>
			</div>
			<!--end:Menu item-->
			<!--begin:Menu item - الموردين-->
			<div data-kt-menu-trigger="click" class="menu-item menu-accordion">
				<div class="menu-item">
					<a class="@Html.IsSelected(actions: "index", controllers: "supplier")" asp-controller="Supplier" asp-action="Index">
